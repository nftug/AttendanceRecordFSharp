    <Compile Include="Views/SettingsPage/Context/SettingsPageContext.fs" />
    <Compile Include="Views/SettingsPage/Sections/ThemeSection.fs" />
    <Compile Include="Views/SettingsPage/Sections/BasicSettingsSection.fs" />
    <Compile Include="Views/SettingsPage/Sections/WorkEndAlarmSection.fs" />
    <Compile Include="Views/SettingsPage/Sections/RestStartAlarmSection.fs" />
    <Compile Include="Views/SettingsPage/SettingsActionsView.fs" />
