    <Compile Include="Views/AboutPage/AboutPageView.fs" />

    <Compile Include="Views/Application/AppTrayIcon.fs" />
    <Compile Include="Views/Application/AlarmHost.fs" />
    <Compile Include="Views/Application/MainView.fs" />

    <Compile Include="AppStyles.fs" />
    <Compile Include="MainWindow.fs" />

    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets/**/*" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" Version="11.3.8" />
    <PackageReference Include="DialogHost.Avalonia" Version="0.9.3" />
    <PackageReference Include="Material.Icons.Avalonia" Version="3.0.0-preview3.1" />
    <PackageReference Include="NXUI" Version="11.3.0.1" />
    <PackageReference Include="NXUI.Desktop" Version="11.3.0.1" />
    <PackageReference Include="R3" Version="1.3.0" />
