<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0</TargetFramework>

    <PublishAot>true</PublishAot>
    <BuiltInComInteropSupport>false</BuiltInComInteropSupport>
    <OptimizationPreference>Size</OptimizationPreference>
    <InvariantGlobalization>false</InvariantGlobalization>
    <RootAllApplicationAssemblies>false</RootAllApplicationAssemblies>
    <IlcGenerateCompleteTypeMetadata>false</IlcGenerateCompleteTypeMetadata>
    <IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>
    <IlcFoldIdenticalMethodBodies>true</IlcFoldIdenticalMethodBodies>
    <IlcDisableUnhandledExceptionExperience>false</IlcDisableUnhandledExceptionExperience>
    <IsAotCompatible>true</IsAotCompatible>

    <Version>3.0.0.0</Version>
    <AssemblyName>AttendanceRecord</AssemblyName>
    <AssemblyTitle>Attendance Record</AssemblyTitle>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DebugSymbols>false</DebugSymbols>
    <DebugType>none</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="ServiceContainer.fs" />

    <Compile Include="Utils/ApplicationUtils.fs" />
    <Compile Include="Utils/PlatformColors.fs" />
    <Compile Include="Utils/EmbeddedResourceProvider.fs" />
    <Compile Include="Utils/ContextProvider.fs" />
    <Compile Include="Utils/UseMutation.fs" />
    <Compile Include="Utils/GridExtensions.fs" />
    <Compile Include="Utils/ItemsControlExtensions.fs" />
    <Compile Include="Utils/Notification.fs" />

    <Compile Include="Views/Common/MaterialIcon.fs" />
    <Compile Include="Views/Common/MessageBox.fs" />
    <Compile Include="Views/Common/DatePickerDialog.fs" />
    <Compile Include="Views/Common/AccentToggleButton.fs" />
    <Compile Include="Views/Common/TimePickerField.fs" />
    <Compile Include="Views/Common/ThemeContext.fs" />
    <Compile Include="Views/Common/Navigation/NavigationContext.fs" />
    <Compile Include="Views/Common/Navigation/NavigationView.fs" />

    <Compile Include="Views/HomePage/Context/HomePageContext.fs" />
    <Compile Include="Views/HomePage/ClockView.fs" />
    <Compile Include="Views/HomePage/HomeActionsHooks.fs" />
    <Compile Include="Views/HomePage/HomeActionsView.fs" />
    <Compile Include="Views/HomePage/StatusView.fs" />
    <Compile Include="Views/HomePage/HomePageView.fs" />

    <Compile Include="Views/HistoryPage/Context/HistoryPageContext.fs" />
    <Compile Include="Views/HistoryPage/Edit/WorkTimeSection.fs" />
    <Compile Include="Views/HistoryPage/Edit/RestTimeSection.fs" />
    <Compile Include="Views/HistoryPage/Edit/WorkStatusSummarySection.fs" />
    <Compile Include="Views/HistoryPage/Edit/WorkRecordEditView.fs" />
